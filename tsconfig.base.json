{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "expresso-*": ["packages/*"]
    },
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "jest.config.js", "lib", "lib/**/*"]
}
