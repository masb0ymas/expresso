{
  "name": "expresso",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean:all": "yarn nx run-many --target=clean",
    "typecheck:all": "yarn nx run-many --target=typecheck",
    "build:all": "yarn nx run-many --target=build",
    "build:core": "npm run build --workspace expresso-core",
    "build:hooks": "npm run build --workspace expresso-hooks",
    "build:query": "npm run build --workspace expresso-query",
    "build:provider": "npm run build --workspace expresso-provider",
    "test:core": "npx jest --verbose packages/core",
    "test:hooks": "npx jest --verbose packages/hooks",
    "test:query": "npx jest --verbose packages/query",
    "test:provider": "npx jest --verbose packages/provider",
    "test:all": "npm-run-all test:core test:hooks test:query test:provider",
    "prerelease": "npm-run-all test:all build:all typecheck:all",
    "release": "npx lerna version --conventional-commits",
    "publish": "npm publish --workspaces"
  },
  "author": "masb0ymas <n.fajri@mail.com>",
  "license": "MIT",
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.19",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "lerna": "^6.6.2",
    "nx": "15.9.1",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "1.4.5-lts.1",
    "npm-run-all": "^4.1.5",
    "slugify": "^1.6.6"
  }
}
