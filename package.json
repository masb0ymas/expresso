  "license": "MIT",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lerna": "^7.3.0",
    "nx": "16.6.0",
    "nx-cloud": "latest",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "typescript": "~5.1.6"
  }
